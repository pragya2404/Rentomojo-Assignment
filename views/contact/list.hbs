<h3>Contact List <div align="right"><a class="btn btn-secondary" href="/"><i
                class="fa fa-plus"></i> Create New</a></div></h3>
                
    <div class="row">
        <div class="col-2 text-center">
            <b>By Name</b>
        </div>
        <div class="col-3 text-center">
            <b>By Phone Number</b>
        </div>
        <div class="col-4 text-center">
            <b>By Email</b>
        </div>
        <div class="col-2"></div>
    </div>
    
    <div class="row p-2">
        <div class="col-2">
            <input class="form-control rounded" id="searchName" placeholder="Enter name"/>
        </div>
        <div class="col-3">
            <input class="form-control rounded" id="searchPhone" placeholder="Enter number"/>
        </div>
        <div class="col-4">
            <input class="form-control rounded" id="searchEmail" placeholder="Enter email"/>
        </div>
        <div class="col-2"></div>
    </div>


<table id="pages" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>DOB</th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.email}}</td>
            <td>{{this.birthday}}</td>
            <td>
                <a href="/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                &nbsp;
                <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

