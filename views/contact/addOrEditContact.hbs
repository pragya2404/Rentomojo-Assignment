<div style="padding-left: 200px; padding-right:200px;" >
    <h3>{{viewTitle}}</h3>
    <form action="/" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{contact._id}}">
        <div class="form-group">
            <label>Name <span style="color: red;">*</span></label>
            <input type="text" class="form-control rounded" name="fullname"
                placeholder="Enter your name" value="{{contact.name}}"
                required=true>
        </div>
        <div class="form-group">
            <label>Phone number <span style="color: red;">*</span> </label>
            <input type="text" pattern="[0-9]{10}" class="form-control rounded"
                name="mobile" placeholder="Add number"
                value="{{contact.mobile}}" required=true>
        </div>
        <div class="form-group">
            <label>Email </label>
            <input type="email"
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
                class="form-control rounded" name="email" placeholder="Enter E-mail"
                value="{{contact.email}}">
        </div>
        <div class="form-group">
            <label>DOB </label>
            <input type="text" class="form-control rounded"
                pattern="(?:19|20)(?:(?:[13579][26]|[02468][048])-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))|(?:[0-9]{2}-(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-8])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:29|30))|(?:(?:0[13578]|1[02])-31)))"
                name="birthday"
                value="{{contact.birthday}}" placeholder="YYYY-MM-DD">
        </div>
        <div class="form-group" align="right">
            <button type="submit" class="btn btn-info"><i class="fa fa-save
                    p-2"></i>Save</button>
            <a class="btn btn-secondary" href="/list/1"><i class="fa
                    fa-list-alt"></i> View All</a>

        </div>
    </form>
</div>