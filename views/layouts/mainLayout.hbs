        <script type="text/javascript">
            $(function(){
                $('#searchName').autocomplete({
                    source: function(req, res){

                        $.ajax({
                            url:"/autocomplete/",
                            dataType:"jsonp",
                            type:"GET",
                            data:req,
                            success: function(data){
                                console.log(data)
                            },
                            error: function(err){
                                console.log(err.status);
                            }
                        });
                    },
                    minLength:1,
                    select: function(event, ui){
                        if(ui.item){
                            $('#searchName').text(ui.item.label);
                        }
                    }
                });
            });
